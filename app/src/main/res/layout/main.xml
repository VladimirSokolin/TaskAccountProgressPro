<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/transparent"
	android:orientation="vertical">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar_main_activity"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/little_transparent"
		android:elevation="5dp"
		android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>


	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="5dp"
		android:layout_weight="6"
		android:background="@drawable/shape_view_in_dialog">

		<TextView
			android:id="@+id/tv_important_information"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/shape_view_in_dialog"
			android:padding="5dp"
			app:layout_constraintBottom_toBottomOf="@+id/bt_go_to_notepad"
			app:layout_constraintEnd_toStartOf="@+id/guideline"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/bt_add_fast_notes" />

		<Button
			android:id="@+id/bt_add_fast_notes"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="5dp"
			android:elevation="10dp"
			android:background="@drawable/selector_button_notes"
			android:text="add"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline"
			app:layout_constraintTop_toTopOf="parent" />

		<Button
			android:id="@+id/bt_go_to_notepad"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="5dp"
			android:background="@drawable/selector_button_notes"
			android:elevation="10dp"
			android:text="See"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideline"
			app:layout_constraintTop_toBottomOf="@+id/bt_add_fast_notes" />

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_view_fast_notes"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_margin = "5dp"
			android:padding="2dp"
			android:orientation="horizontal"
			android:background="@drawable/shape_view_in_dialog"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/bt_go_to_notepad" />

		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.75" />


	</androidx.constraintlayout.widget.ConstraintLayout>

	<ListView
		android:id="@+id/list_view_task"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="5dp"
		android:padding="5dp"
		android:background="@drawable/shape_view_in_dialog"
		android:dividerHeight="10dp"
		android:divider="@android:color/transparent"
		android:layout_weight="5">
	</ListView>

	<include layout="@layout/layout_navigate_buttons" />

</LinearLayout>

