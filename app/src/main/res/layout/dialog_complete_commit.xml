<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_dialog_commit_complete"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:background="@drawable/shape_dialog"
	android:orientation="vertical">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Text"
		android:textStyle="bold"
		android:textSize="22sp"
		android:padding="8dp"
		android:layout_margin="5dp"
		android:id="@+id/dialog_tv_start_page"/>



	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="2dp"
		android:paddingLeft="2dp"
		android:background="@drawable/shape_view_in_dialog">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text = "How concentrated were you :"
			android:textStyle="bold"
			android:padding="13dp"
			android:background="@drawable/shape_view_in_dialog"/>

		<Spinner
			android:id="@+id/spinner_attention"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:padding="13dp"
			android:entries="@array/level_attention"/>
	</LinearLayout>


	<EditText
		android:id="@+id/et_new_current_page"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="numberDecimal"
		android:layout_marginTop="10dp"
		android:background="@drawable/shape_view_in_dialog"
		android:hint="How page stop?"
		android:padding="13dp"
		android:textSize="16sp" />

	<EditText
		android:id="@+id/description_dialog_commit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:background="@drawable/shape_view_in_dialog"
		android:hint="Description"
		android:padding="13dp"
		android:textSize="16sp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="end"
		android:orientation="horizontal">

		<Button
			android:id="@+id/bt_cancel_dialog_complete"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:background="@drawable/shape_button_in_dialog"
			android:text="@string/button_dialog_cancel"/>

		<Button
			android:id="@+id/bt_ok_dialog_complete"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="5dp"
			android:background="@drawable/shape_button_in_dialog"
			android:text="@string/button_dialog_ok"/>

	</LinearLayout>

</LinearLayout>

